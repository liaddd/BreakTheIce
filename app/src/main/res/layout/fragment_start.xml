<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent" android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center"
        tools:context=".fragments.StartFragment">

    <androidx.cardview.widget.CardView
            android:id="@+id/start_fragment_category_card_view"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:layout_width="match_parent"
            android:layout_height="64dp"
            card_view:cardElevation="4dp"
            card_view:cardCornerRadius="3dp"
    >

        <androidx.appcompat.widget.AppCompatSpinner
                android:id="@+id/start_fragment_category_spinner"
                android:layout_width="match_parent"
                android:layout_marginStart="8dp"
                android:layout_height="match_parent">

        </androidx.appcompat.widget.AppCompatSpinner>

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
            android:visibility="invisible"
            android:id="@+id/start_fragment_difficulty_card_view"
            android:layout_marginTop="16dp"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:layout_width="match_parent"
            android:layout_height="64dp"
            card_view:cardElevation="4dp"
            card_view:cardCornerRadius="3dp"
    >

        <androidx.appcompat.widget.AppCompatSpinner
                android:id="@+id/start_fragment_difficulty_spinner"
                android:layout_marginStart="8dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

        </androidx.appcompat.widget.AppCompatSpinner>

    </androidx.cardview.widget.CardView>


    <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/start_fragment_next_button"
            android:layout_width="match_parent"
            android:layout_height="64dp"
            android:textColor="@android:color/white"
            android:layout_margin="16dp"
            android:textAllCaps="false"
            android:textSize="24sp"
            android:visibility="invisible"
            android:fontFamily="@font/pacifico"
            android:background="@drawable/start_button_background"
            android:text="Start"
    />



</LinearLayout>