<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:card_view="http://schemas.android.com/apk/res-auto" xmlns:ndroid="http://schemas.android.com/tools"
              android:orientation="vertical"
              android:gravity="center"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <androidx.cardview.widget.CardView
            android:id="@+id/question_item_card_view"
            android:layout_width="match_parent"
            card_view:cardElevation="4dp"
            android:layout_marginTop="4dp"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            card_view:cardUseCompatPadding="true"
            card_view:cardCornerRadius="5dp"
            android:layout_height="150dp">

        <TextView
                android:id="@+id/question_item_card_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/lorem_ipsum"
                android:textColor="@android:color/black"
                android:layout_gravity="center"
                android:textSize="24sp"
                android:gravity="center"/>

        <ImageView
                android:visibility="gone"
                android:id="@+id/question_item_image_view"
                android:src="@android:drawable/ic_input_add"
                android:layout_gravity="center"
                android:layout_width="60dp"
                android:layout_height="60dp"
        />

    </androidx.cardview.widget.CardView>


    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <TextView
                android:padding="16dp"
                android:id="@+id/question_item_like_text_view"
                android:textStyle="bold"
                android:textColor="@color/splashBackground"
                android:layout_width="0dp"
                android:gravity="start"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="like"/>

        <TextView
                android:padding="16dp"
                android:id="@+id/question_item_next_text_view"
                android:textStyle="bold"
                android:textColor="@color/splashBackground"
                android:gravity="center"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="next"/>

        <TextView
                android:padding="16dp"
                android:id="@+id/question_item_dislike_text_view"
                android:textStyle="bold"
                android:textColor="@color/splashBackground"
                android:gravity="end"
                android:paddingEnd="16dp"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="dislike"/>
    </LinearLayout>
</LinearLayout>